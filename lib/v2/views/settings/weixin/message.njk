{% extends './layout.njk' %}

{% block main %} 
<h4 class="text-center">消息设置</h4>
{% if updated %}
<div class="alert alert-success" role="alert" ng-show="updated">更新成功!</div>
{% endif %}

    <form class="form-horizontal message" method="post">
      <div class="form-group">
        <label for="aes" class="col-sm-2 control-label">Encoding AES Key</label>
       <div class="col-sm-10">
        <input type="text" name="aes" ng-model="message.aes" class="form-control" id="aes" placeholder="Encoding AES Key"  value="">
       </div>
      </div>
      <hr/>
      <button type="submit" class="btn btn-default btn-block btn-success" ng-click="set('message')">提交</button>
      <hr/>
    </form>
{% endblock %}