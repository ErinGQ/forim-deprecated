<% include ../header.ejs %>
<% include ../nav.ejs %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% include sidebar.ejs %>
    </div>
    <div class="col-md-8 col-xs-12">
      <% if (updated) { %>
      <div class="alert alert-success" role="alert"><%=type%>信息已经保存！<%=updated%></div>
      <% } %>
      <form class="form-horizontal" method="post">
        <div class="form-group">
          <label for="host">主机域名(如:weixin.qq.com)</label>
          <input type="text" name="host" class="form-control" id="host"
                 value="<%= hostname %>"
                 placeholder="请配置您的主机域名">
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">服务器校验地址</label>
          <div class="col-sm-10">
            <p class="form-control-static"><a href="<%=urls.auth.ack%>" target="_blank"><%=urls.auth.ack%></a></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">JSSDK配置请求地址</label>
          <div class="col-sm-10">
            <p class="form-control-static"><a href="<%=urls.jssdk.config%>" target="_blank"><%=urls.jssdk.config%></a></p>
          </div>
        </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Oauth访问地址</label>
            <div class="col-sm-10">
              <p class="form-control-static"><a href="<%=urls.oauth.access%>" target="_blank"><%=urls.oauth.access%></a></p>
            </div>
          </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Oauth访问成功请求地址</label>
          <div class="col-sm-10">
            <p class="form-control-static"><a href="<%=urls.oauth.success%>" target="_blank"><%=urls.oauth.success%></a></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Oauth成功重定向页面地址</label>
          <div class="col-sm-10">
            <p class="form-control-static"><a href="<%=urls.oauth.redirect%>" target="_blank"><%=urls.oauth.redirect%></a></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">支付回调地址</label>
          <div class="col-sm-10">
            <p class="form-control-static"><a href="<%=urls.pay.callback%>" target="_blank"><%=urls.pay.callback%></a></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">支付页面</label>
          <div class="col-sm-10">
            <p class="form-control-static"><a href="<%=urls.pay.redirect%>" target="_blank"><%=urls.pay.redirect%></a></p>
          </div>
        </div>
        <button type="submit" class="btn btn-default btn-block btn-success">提交</button>
        <hr/>
      </form>
    </div>
  </div>
</div>
<script>
  var id = document.getElementById('host');
  id.value = location.host;
</script>
<% include ../footer.ejs %>
