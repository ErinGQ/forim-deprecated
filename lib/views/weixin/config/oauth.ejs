
<% include ../header.ejs %>
<% include ../nav.ejs %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% include sidebar.ejs %>
    </div>
    <div class="col-md-8 col-xs-12">
      <% if (updated) { %>
      <div class="alert alert-success" role="alert"><%=type%>信息已经保存！<%=updated%></div>
      <% } %>
      <form class="form-horizontal" method="post">
        <div class="form-group">
          <label for="state">State</label>
          <input type="text" name="state" class="form-control" id="state" placeholder="State" value="<%=oauth.state%>">
        </div>
        <div class="form-group">
          <label for="scope">Scope:<%=oauth.scope%></label>
          <select class="form-control" name="scope" id="scope">
            <option value="0" <%if (oauth.scope !== '1' ) {%>selected<%}%>>snsapi_base</option>
            <option value="1" <%if (oauth.scope === '1' ) {%>selected<%}%>>snsapi_userinfo</option>
          </select>
        </div>
        <hr/>
        <button type="submit" class="btn btn-default btn-block btn-success">Submit</button>
        <hr/>
      </form>
    </div>
  </div>
</div>
<% include ../footer.ejs %>
