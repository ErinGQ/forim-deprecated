<% include ../header.ejs %>
<% include ../nav.ejs %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% include sidebar.ejs %>
    </div>
    <div class="col-md-8 col-xs-12">
      <% if (updated) { %>
      <div class="alert alert-success" role="alert"><%=type%>信息已经保存！<%=updated%></div>
      <% } %>
      <form class="form-horizontal" method="post">
        <div class="form-group">
          <label for="id">App Id</label>
          <input type="text" name="id" class="form-control" id="id" placeholder="App Id" disabled value="<%=app.id%>">
        </div>
        <div class="form-group">
          <label for="secret">App Secret</label>
          <input type="text" name="secret" class="form-control" id="secret" placeholder="App Secret" value="<%=app.secret%>">
        </div>
        <div class="form-group">
          <label for="token">App Token</label>
          <input type="text" name="token" class="form-control" id="token" placeholder="App Token" value="<%=app.token%>">
        </div>
        <hr/>
        <button type="submit" class="btn btn-default btn-block btn-success">提交</button>
        <hr/>
      </form>
    </div>
  </div>
</div>
<% include ../footer.ejs %>
